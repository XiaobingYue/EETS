<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yxb.multiManage.dao.InstituteDao">
    <resultMap id="instituteMap" type="institute">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="timestamp" property="timestamp"></result>
        <result column="state" property="state"></result>
    </resultMap>

    <select id="queryAllInstitute" resultMap="instituteMap">
        SELECT * FROM t_institute WHERE STATE = #{state}
        <if test="queryText != null">
            and NAME like concat('%', #{queryText}, '%')
        </if>
        ORDER BY TIMESTAMP DESC
        <if test="start != null">
            limit #{start} , #{size}
        </if>
    </select>

    <select id="queryCount" resultType="int">
        select COUNT(*) FROM t_institute WHERE STATE = #{state}
        <if test="queryText != null">
            and NAME like concat('%', #{queryText}, '%')
        </if>
    </select>

    <update id="editInstitute">
        UPDATE t_institute SET NAME = #{name} , TIMESTAMP = #{timestamp}
        <if test="state != null">
            , STATE = #{state}
        </if>
        WHERE ID = #{id}
    </update>

    <insert id="addInstitute">
        INSERT INTO t_institute (NAME ,TIMESTAMP,STATE) VALUES (#{name} , #{timestamp} , #{state})
    </insert>

    <select id="queryById" resultMap="instituteMap">
        SELECT * FROM t_institute WHERE ID = #{id}
    </select>
</mapper>